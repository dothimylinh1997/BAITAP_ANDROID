<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MainActivity">
<!--<LinearLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content">-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Please select the type of photo you like :"
        android:textSize="18dp"
        android:textStyle="bold|italic"
        android:textColor="#000080"/>
<!--</LinearLayout>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/btnLandscape"
                android:layout_width="141dp"
                android:layout_height="48dp"
                android:checked="true"
                android:text="LANDSCAPE" />

            <RadioButton
                android:id="@+id/btnSky"
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:text="SKY" />

            <RadioButton
                android:id="@+id/btnColor"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:text="COLOR" />

            <RadioButton
                android:id="@+id/btnIsland"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:text="ISLAND" />

            <RadioButton
                android:id="@+id/btnSunshine"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:text="SUNSHINE" />
        </RadioGroup>

        <ImageView
            android:id="@+id/imgPicture"
            android:layout_width="wrap_content"
            android:layout_height="257dp"
            android:contentDescription="TODO"
            app:srcCompat="@drawable/landscape" />
    </LinearLayout>


</LinearLayout>