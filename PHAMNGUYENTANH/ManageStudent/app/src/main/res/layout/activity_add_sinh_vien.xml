<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_login"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".AddSinhVien">

    <TextView
        android:id="@+id/textviewThemKhoa"
        android:text="Thêm Khoa"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textSize="40sp"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:textSize="18sp"
        android:text="Mã Sinh Viên:"
        android:textColor="	#000000" />

    <EditText
        android:id="@+id/editMaSinhVien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập Mã Sinh Viên"
        android:background="@drawable/custom_edt_login"
        android:paddingBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:textSize="18sp"
        android:text="Họ Tên:"
        android:textColor="	#000000" />

    <EditText
        android:id="@+id/editHoTen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập Họ Tên"
        android:background="@drawable/custom_edt_login"
        android:paddingBottom="5dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:textSize="18sp"
        android:text="Giới Tính:"
        android:textColor="	#000000" />

    <EditText
        android:id="@+id/editGioiTinh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Giới Tính"
        android:background="@drawable/custom_edt_login"
        android:paddingBottom="5dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:textSize="18sp"
        android:text="Địa Chỉ: "
        android:textColor="	#000000" />

    <EditText
        android:id="@+id/editDiaChi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập Địa Chỉ"
        android:background="@drawable/custom_edt_login"
        android:paddingBottom="5dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:textSize="18sp"
        android:text="Ngày Sinh: "
        android:textColor="	#000000" />

    <EditText
        android:id="@+id/editNgaySinh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập Ngày Sinh"
        android:background="@drawable/custom_edt_login"
        android:paddingBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:textSize="18sp"
        android:text="Mã Lớp: "
        android:textColor="	#000000" />

    <EditText
        android:id="@+id/editMaLopSv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập Mã Lớp"
        android:background="@drawable/custom_edt_login"
        android:paddingBottom="5dp" />

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:layout_below="@+id/editTenKhoa"
            android:id="@+id/buttonThemSv"
            android:text="Thêm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_below="@+id/buttonThem"
            android:id="@+id/buttonHuySv"
            android:text="Hủy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>