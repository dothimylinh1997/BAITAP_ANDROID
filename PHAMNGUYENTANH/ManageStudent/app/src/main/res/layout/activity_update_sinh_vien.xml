<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_login"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".UpdateSinhVien">

    <TextView
        android:text="Cập Nhật Sinh Viên"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textSize="40sp"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:textSize="18sp"
        android:text="Mã Sinh Viên:"
        android:textColor="	#000000" />

    <EditText
        android:id="@+id/editMaSvedit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập Mã Khoa"
        android:background="@drawable/custom_edt_login"
        android:paddingBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:textSize="18sp"
        android:text="Họ Tên:"
        android:textColor="	#000000" />

    <EditText
        android:id="@+id/editHoTenedit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập Tên Khoa"
        android:background="@drawable/custom_edt_login"
        android:paddingBottom="5dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:textSize="18sp"
        android:text="Ngày Sinh:"
        android:textColor="	#000000" />

    <EditText
        android:id="@+id/editNgaySinhedit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập Mã Khoa"
        android:background="@drawable/custom_edt_login"
        android:paddingBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:textSize="18sp"
        android:text="Địa Chỉ:"
        android:textColor="	#000000" />

    <EditText
        android:id="@+id/editDiaChiedit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập Địa Chỉ"
        android:background="@drawable/custom_edt_login"
        android:paddingBottom="5dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:textSize="18sp"
        android:text="Giới Tính:"
        android:textColor="	#000000" />

    <EditText
        android:id="@+id/editGioiTinhedit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập Giới Tính"
        android:background="@drawable/custom_edt_login"
        android:paddingBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:textSize="18sp"
        android:text="Mã Lớp:"
        android:textColor="	#000000" />

    <EditText
        android:id="@+id/editMaLopSvedit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập Mã Lớp"
        android:background="@drawable/custom_edt_login"
        android:paddingBottom="5dp" />

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/buttonCapNhatSv"
            android:text="Cập Nhật"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/buttonHuyCapNhatSv"
            android:text="Hủy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>