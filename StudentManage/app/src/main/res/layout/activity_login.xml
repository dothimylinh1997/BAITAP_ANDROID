<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bgg3"
    android:padding="12dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:background="@drawable/contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/edtUserDN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:hint="Mời bạn nhập tên tài khoản"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:drawableRight="@drawable/ic_people_black_24dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="@color/input_login_hint" />

        <EditText
            android:id="@+id/edtPasswordDN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:hint="Mời bạn nhập mật khẩu"
            android:inputType="textPassword"
            android:padding="10dp"
            android:drawableRight="@drawable/ic_vpn_key_black_24dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="@color/input_login_hint" />

        <Button
            android:id="@+id/btnDangNhap"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:background="#4CAF50"
            android:text="ĐĂNG NHẬP"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="18dp"/>

        <Button
            android:id="@+id/btnDangKyTaiKhoan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@null"
            android:text="Bạn chưa có tài khoản?  Đăng ký ngay!"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:textSize="19dp" />

        <Button
            android:id="@+id/btnThoatDangNhap"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="#FF9800"
            android:text="THOÁT"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>
