<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:background="@drawable/bbgg"
    tools:context=".Activity.ActivityDiemDanh">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="#FF125E16"
            android:text="CHỨC NĂNG ĐIỂM DANH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:padding="12dp"
            android:background="@drawable/shape_item"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Chọn lớp: "
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <Spinner
                android:padding="20dp"
                android:spinnerMode="dropdown"
                android:id="@+id/spinnerChonLop1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </Spinner>
            <TextView
                android:text="Chọn môn học: "
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Spinner
                android:padding="20dp"
                android:id="@+id/spinnerChonMonHoc1"
                android:layout_width="match_parent"
                android:spinnerMode="dropdown"
                android:layout_height="wrap_content">

            </Spinner>
            <TextView
                android:text="Ngày điểm danh:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edittextNhapNgayDiemDanh"
                android:hint="Nhập ngày điểm danh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginBottom="15dp"
                android:layout_gravity="center"
                android:padding="12dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/buttonDiemDanh"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_btn1"
                    android:text="Nhập Điểm Danh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/buttonXemDiemDanh"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_btn1"
                    android:text="Sửa Điểm Danh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>