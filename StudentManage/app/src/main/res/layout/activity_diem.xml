<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:background="@drawable/bbgg"
    tools:context=".Activity.ActivityDiem">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="27sp"
            android:textColor="#FF125E16"
            android:text="CHỨC NĂNG XEM ĐIỂM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:padding="12dp"
            android:background="@drawable/shape_item"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Mã sinh viên:"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edittextMaSvXemDiem"
                android:hint="Nhập mã sinh viên"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:layout_marginTop="20dp"
                android:id="@+id/buttonXemDiem"
                android:layout_gravity="center"
                android:background="@drawable/shape_btn1"
                android:text="Xem Điểm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:textColor="#125E16"
            android:layout_marginTop="50dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="27sp"
            android:text="CHỨC NĂNG NHẬP ĐIỂM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:padding="12dp"
            android:background="@drawable/shape_item"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Chọn lớp: "
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <Spinner
                android:padding="25dp"
                android:spinnerMode="dropdown"
                android:id="@+id/spinnerChonLop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </Spinner>
            <TextView
                android:text="Chọn môn học: "
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Spinner
                android:padding="25dp"
                android:id="@+id/spinnerChonMonHoc"
                android:layout_width="match_parent"
                android:spinnerMode="dropdown"
                android:layout_height="wrap_content">

            </Spinner>
            <Button
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:background="@drawable/shape_btn1"
                android:text="Nhập điểm"
                android:id="@+id/buttonNhapDiem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>


</ScrollView>