<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="#ffff"
    tools:context=".Activity.ActivityDiem">

    <Spinner
        android:id="@+id/spinnerChonMonHoc"
        android:layout_width="match_parent"
        android:spinnerMode="dropdown"
        android:layout_height="wrap_content">

    </Spinner>

    <Spinner
        android:spinnerMode="dropdown"
        android:layout_marginTop="20dp"
        android:id="@+id/spinnerChonLop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </Spinner>

    <TableLayout
        android:id="@+id/tableDiem"
        android:stretchColumns="*"
        android:layout_marginVertical="30dp"
        android:layout_marginHorizontal="10dp"
        android:background="#f1f1f1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView
                android:gravity="center"
                android:text="Tên"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:gravity="center"
                android:text="Điểm CC"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />
            <TextView
                android:gravity="center"
                android:text="Điểm TH"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />
            <TextView
                android:gravity="center"
                android:text="Điểm GK"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />
            <TextView
                android:layout_gravity="center"
                android:text="Điểm CK"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </TableRow>
        <TableRow>
            <ListView
                android:background="#ffff"
                android:gravity="center"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:id="@+id/listviewNameDiem">

            </ListView>
            <TextView
                android:gravity="center"
                android:text="10"
                android:layout_marginBottom="1dp"
                android:layout_marginHorizontal="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffff"
                />
            <TextView
                android:gravity="center"
                android:text="10"
                android:layout_marginBottom="1dp"
                android:layout_marginHorizontal="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffff"
                />
            <TextView
                android:gravity="center"
                android:text="10"
                android:layout_marginBottom="1dp"
                android:layout_marginHorizontal="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffff"
                />
            <TextView
                android:gravity="center"
                android:text="10"
                android:layout_marginBottom="1dp"
                android:layout_marginHorizontal="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffff"
                />
        </TableRow>
    </TableLayout>

</LinearLayout>