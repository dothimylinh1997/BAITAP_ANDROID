<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgapps"
    tools:context=".Activity.Home">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginTop="32dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textviewName"
                android:text="Name: Admin"
                android:textColor="#ffff"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textviewRoleName"
                android:layout_below="@+id/textviewName"
                android:text="Role: Phòng giáo vụ"
                android:layout_marginTop="6dp"
                android:textColor="#52baff"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_alignParentRight="true"
                android:src="@drawable/contact"
                android:layout_width="62dp"
                android:layout_height="62dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:padding="12dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/linearKhoa"
                android:layout_marginRight="6dp"
                android:background="@drawable/shape_item"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/khoa"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp" />

                <TextView
                    android:textStyle="bold"
                    android:text="Khoa"
                    android:layout_marginTop="12dp"
                    android:textColor="#6f6f6f"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLop"
                android:layout_marginLeft="6dp"
                android:background="@drawable/shape_item"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/lop"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp" />

                <TextView
                    android:textStyle="bold"
                    android:text="Lớp"
                    android:layout_marginTop="12dp"
                    android:textColor="#6f6f6f"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:padding="12dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/LinearSinhVien"
                android:layout_marginRight="6dp"
                android:background="@drawable/shape_item"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/sinhvien"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp" />

                <TextView
                    android:textStyle="bold"
                    android:text="Sinh Viên"
                    android:layout_marginTop="12dp"
                    android:textColor="#6f6f6f"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearPhieu"
                android:layout_marginLeft="6dp"
                android:background="@drawable/shape_item"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/search1"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp" />

                <TextView
                    android:textStyle="bold"
                    android:text="Tìm Kiếm"
                    android:layout_marginTop="12dp"
                    android:textColor="#6f6f6f"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:padding="12dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/LinearMonHoc"
                android:layout_marginRight="6dp"
                android:background="@drawable/shape_item"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/monhoc"
                    android:layout_width="wrap_content"
                    android:layout_height="110dp" />

                <TextView
                    android:textStyle="bold"
                    android:text="Môn Học"
                    android:layout_marginTop="12dp"
                    android:textColor="#6f6f6f"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearDiem"
                android:layout_marginLeft="6dp"
                android:background="@drawable/shape_item"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/diem"
                    android:layout_width="wrap_content"
                    android:layout_height="110dp" />

                <TextView
                    android:textStyle="bold"
                    android:text="Điểm"
                    android:layout_marginTop="12dp"
                    android:textColor="#6f6f6f"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:padding="12dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/LinearThoiKhoaBieu"
                android:layout_marginRight="6dp"
                android:background="@drawable/shape_item"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/logo_tkb"
                    android:layout_width="wrap_content"
                    android:layout_height="110dp" />

                <TextView
                    android:textStyle="bold"
                    android:text="Thời Khóa Biểu"
                    android:layout_marginTop="12dp"
                    android:textColor="#6f6f6f"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/LinearThongBao"
                android:layout_marginRight="6dp"
                android:background="@drawable/shape_item"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/bell"
                    android:layout_width="wrap_content"
                    android:layout_height="110dp" />

                <TextView
                    android:textStyle="bold"
                    android:text="Thông Báo"
                    android:layout_marginTop="12dp"
                    android:textColor="#6f6f6f"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>